{
  "name": "@hashgraphonline/hashinal-wc",
  "version": "1.0.52",
  "description": "The official Hashinal Wallet Connect SDK. A set of easy-to-use functions to interact with Hedera through Wallet Connect.",
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "./dist/umd/hashinal-wc.umd.js",
  "module": "./dist/es/hashinal-wc.es.js",
  "exports": {
    ".": {
      "import": "./dist/es/hashinal-wc.es.js",
      "require": "./dist/umd/hashinal-wc.umd.js"
    }
  },
  "types": "./dist/index.d.ts",
  "scripts": {
    "clean": "rimraf dist",
    "build:es": "BUILD_FORMAT=es vite build && tsc --emitDeclarationOnly",
    "build:umd": "BUILD_FORMAT=umd vite build",
    "build": "npm run clean && npm run build:umd && npm run build:es",
    "pub": "npm publish --access public"
  },
  "dependencies": {
    "@hashgraph/hedera-wallet-connect": "^1.3.2",
    "@hashgraph/proto": "^2.15.0",
    "@hashgraph/sdk": "^2.50.0",
    "@walletconnect/modal": "^2.6.2",
    "@walletconnect/qrcode-modal": "^1.8.0",
    "@walletconnect/types": "^2.15.1",
    "@walletconnect/utils": "^2.15.1",
    "vite-plugin-string-replace": "^1.1.3"
  },
  "devDependencies": {
    "@types/node": "^22.2.0",
    "@vitejs/plugin-react": "^4.3.1",
    "assert": "^2.1.0",
    "buffer": "^6.0.3",
    "crypto-browserify": "^3.12.0",
    "https-browserify": "^1.0.0",
    "node-stdlib-browser": "^1.2.0",
    "os-browserify": "^0.3.0",
    "process": "^0.11.10",
    "rimraf": "^5.0.0",
    "stream-browserify": "^3.0.0",
    "stream-http": "^3.2.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.5.4",
    "url": "^0.11.4",
    "util": "^0.12.5",
    "vite": "^5.4.0",
    "vite-plugin-dts": "^4.0.2",
    "vite-plugin-node-polyfills": "^0.22.0",
    "webpack": "^5.93.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.0.4"
  }
}
